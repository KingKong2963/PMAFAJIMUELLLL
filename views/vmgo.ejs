<%- include('partials/header') %>
<main>
<% if (typeof visionData !== 'undefined' && visionData && typeof missionData !== 'undefined' && missionData && typeof goalsData !== 'undefined' && goalsData && typeof objectivesData !== 'undefined' && objectivesData) { %>

  <!-- Hero Section -->
  <section class="about-hero bg-cover bg-center bg-no-repeat h-screen text-white flex items-center relative overflow-hidden" style="background-image: url('<%= visionData.hero?.backgroundImage ?? '/images/about-hero.jpg' %>'); background-size: contain; background-position: center;">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/70 to-indigo-900/60 z-10"></div>
    <div class="container mx-auto text-center relative z-20 px-4 max-w-6xl">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in text-shadow-lg drop-shadow-2xl" style="text-shadow: 2px 4px 8px rgba(0,0,0,0.5), 0 0 20px rgba(0,0,0,0.3);">
       
      </h1>
      <p class="text-xl md:text-2xl max-w-4xl mx-auto animate-slide-up leading-relaxed text-shadow-md drop-shadow-lg" style="text-shadow: 1px 2px 4px rgba(0,0,0,0.6);">
        <%= visionData.hero?.subtitle ?? 'Our commitment to community excellence and sustainable development.' %>
      </p>
    </div>
  </section>

  <!-- Vision Section -->
  <section class="py-20 md:py-24 bg-gradient-to-br from-indigo-50 via-blue-50 to-purple-100 relative overflow-hidden">
    <!-- Decorative background elements - reduced opacity and added negative z-index -->
    <div class="absolute inset-0 opacity-20 z-[-1]">
      <div class="absolute top-0 -left-4 w-72 h-72 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full mix-blend-multiply filter blur-xl animate-pulse"></div>
      <div class="absolute top-0 -right-4 w-72 h-72 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-2000"></div>
      <div class="absolute -bottom-8 left-20 w-72 h-72 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse animation-delay-4000"></div>
    </div>
    <!-- Geometric stripes - reduced opacity -->
    <div class="absolute inset-0 opacity-5 z-[-1]">
      <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-indigo-400 via-blue-500 to-purple-500 transform -skew-y-1"></div>
      <div class="absolute top-16 left-0 w-full h-1 bg-gradient-to-r from-purple-400 via-pink-400 to-indigo-400 transform skew-y-1"></div>
      <div class="absolute bottom-16 left-0 w-full h-1 bg-gradient-to-r from-blue-400 via-indigo-500 to-purple-500 transform -skew-y-1"></div>
      <div class="absolute bottom-0 left-0 w-full h-2 bg-gradient-to-r from-indigo-500 via-blue-400 to-purple-400 transform skew-y-1"></div>
    </div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10">
      <div class="max-w-5xl mx-auto bg-white p-10 md:p-16 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-gray-100">
        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-6">
            <i class="fas fa-binoculars text-2xl text-indigo-600"></i>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            <%= visionData.content?.title ?? 'Our Vision' %>
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-indigo-500 to-blue-500 mx-auto rounded-full"></div>
        </div>
        <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
          <p class="text-xl md:text-2xl font-light whitespace-pre-line text-center">
            <%= visionData.content?.body ?? 'Default vision content that describes our long-term aspirations and the future we envision for our community.' %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-20 md:py-24 bg-gradient-to-br from-slate-100 via-gray-50 to-blue-100 relative overflow-hidden">
    <!-- Decorative elements - reduced opacity and added negative z-index -->
    <div class="absolute inset-0 opacity-15 z-[-1]">
      <div class="absolute top-10 left-10 w-64 h-64 bg-gradient-to-br from-blue-300 to-indigo-400 rounded-full mix-blend-multiply filter blur-2xl"></div>
      <div class="absolute bottom-10 right-10 w-64 h-64 bg-gradient-to-br from-purple-300 to-blue-400 rounded-full mix-blend-multiply filter blur-2xl"></div>
    </div>
    <!-- Diagonal stripes pattern - reduced opacity -->
    <div class="absolute inset-0 opacity-5 z-[-1]">
      <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="diagonal-stripes" patternUnits="userSpaceOnUse" width="40" height="40">
            <path d="M0,40 L40,0 M-10,10 L10,-10 M30,50 L50,30" stroke="#4f46e5" stroke-width="2"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#diagonal-stripes)"/>
      </svg>
    </div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10">
      <div class="max-w-5xl mx-auto bg-gradient-to-br from-gray-50 to-blue-50 p-10 md:p-16 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-gray-200">
        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-6">
            <i class="fas fa-flag-checkered text-2xl text-indigo-600"></i>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            <%= missionData.content?.title ?? 'Our Mission' %>
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-indigo-500 to-blue-500 mx-auto rounded-full"></div>
        </div>
        <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
          <p class="text-xl md:text-2xl font-light whitespace-pre-line text-center">
            <%= missionData.content?.body ?? 'Default mission content that outlines our purpose and the core activities we undertake to achieve our vision.' %>
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Goals Section -->
  <section class="py-20 md:py-24 bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-100 relative overflow-hidden">
    <!-- Abstract shapes - reduced opacity and added negative z-index -->
    <div class="absolute inset-0 opacity-15 z-[-1]">
      <div class="absolute top-20 left-1/4 w-32 h-32 bg-gradient-to-r from-emerald-400 to-teal-500 rounded-lg transform rotate-45 mix-blend-multiply"></div>
      <div class="absolute bottom-20 right-1/4 w-40 h-40 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-full mix-blend-multiply"></div>
      <div class="absolute top-1/2 left-10 w-24 h-48 bg-gradient-to-b from-teal-300 to-emerald-400 rounded-full transform -rotate-12 mix-blend-multiply"></div>
    </div>
    <!-- Grid pattern - reduced opacity -->
    <div class="absolute inset-0 opacity-5 z-[-1]">
      <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse">
            <path d="M 60 0 L 0 0 0 60" fill="none" stroke="#059669" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
      </svg>
    </div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10">
      <div class="max-w-5xl mx-auto bg-white p-10 md:p-16 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-gray-100">
        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-6">
            <i class="fas fa-list-check text-2xl text-indigo-600"></i>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            <%= goalsData.content?.title ?? 'Our Goals' %>
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-indigo-500 to-blue-500 mx-auto rounded-full"></div>
        </div>
        
        <% if (goalsData.content?.goals && goalsData.content.goals.length > 0) { %>
          <div class="grid md:grid-cols-1 gap-6">
            <% goalsData.content.goals.forEach((goal, index) => { %>
              <div class="flex items-start p-6 bg-gradient-to-r from-indigo-50 to-blue-50 rounded-xl border border-indigo-100 hover:shadow-md transition-all duration-300">
                <div class="flex-shrink-0 w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center mr-4 mt-1">
                  <span class="text-white font-bold text-sm"><%= index + 1 %></span>
                </div>
                <div class="flex-1">
                  <p class="text-lg md:text-xl text-gray-700 leading-relaxed"><%= goal %></p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <i class="fas fa-clipboard-list text-4xl text-gray-300 mb-4"></i>
            <p class="text-xl text-gray-500 italic">No goals defined yet. Check back soon for updates.</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>

  <!-- Objectives Section -->
  <section class="py-20 md:py-24 bg-gradient-to-br from-rose-50 via-pink-50 to-purple-100 relative overflow-hidden">
    <!-- Floating elements - reduced opacity and added negative z-index -->
    <div class="absolute inset-0 opacity-15 z-[-1]">
      <div class="absolute top-16 right-20 w-36 h-36 bg-gradient-to-br from-rose-300 to-pink-400 rounded-full mix-blend-multiply animate-float"></div>
      <div class="absolute bottom-32 left-16 w-28 h-28 bg-gradient-to-br from-purple-300 to-indigo-400 rounded-full mix-blend-multiply animate-float animation-delay-1000"></div>
      <div class="absolute top-1/3 left-1/3 w-20 h-20 bg-gradient-to-br from-pink-400 to-rose-500 transform rotate-45 mix-blend-multiply animate-float animation-delay-2000"></div>
    </div>
    <!-- Wave pattern - reduced opacity -->
    <div class="absolute inset-0 opacity-10 z-[-1]">
      <svg class="absolute inset-0 w-full h-full" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000">
        <path d="M0,500 Q250,400 500,500 T1000,500 V1000 H0 Z" fill="url(#wave-gradient)"/>
        <path d="M0,600 Q250,500 500,600 T1000,600 V1000 H0 Z" fill="url(#wave-gradient-2)" opacity="0.5"/>
        <defs>
          <linearGradient id="wave-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#ec4899;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#a855f7;stop-opacity:1" />
          </linearGradient>
          <linearGradient id="wave-gradient-2" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#f472b6;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#c084fc;stop-opacity:1" />
          </linearGradient>
        </defs>
      </svg>
    </div>
    <div class="container mx-auto px-4 max-w-6xl relative z-10">
      <div class="max-w-5xl mx-auto bg-gradient-to-br from-gray-50 to-indigo-50 p-10 md:p-16 rounded-2xl shadow-xl hover:shadow-2xl transition-shadow duration-300 border border-gray-200">
        <div class="text-center mb-12">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-6">
            <i class="fas fa-crosshairs text-2xl text-indigo-600"></i>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
            <%= objectivesData.content?.title ?? 'Our Objectives' %>
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-indigo-500 to-blue-500 mx-auto rounded-full"></div>
        </div>
        
        <% if (objectivesData.content?.objectives && objectivesData.content.objectives.length > 0) { %>
          <div class="grid md:grid-cols-1 gap-6">
            <% objectivesData.content.objectives.forEach((objective, index) => { %>
              <div class="flex items-start p-6 bg-white rounded-xl border border-indigo-100 hover:shadow-md transition-all duration-300">
                <div class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-indigo-500 to-blue-500 rounded-full flex items-center justify-center mr-4 mt-1">
                  <i class="fas fa-dot-circle text-white text-sm"></i>
                </div>
                <div class="flex-1">
                  <p class="text-lg md:text-xl text-gray-700 leading-relaxed"><%= objective %></p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-12">
            <i class="fas fa-target text-4xl text-gray-300 mb-4"></i>
            <p class="text-xl text-gray-500 italic">No objectives defined yet. Check back soon for updates.</p>
          </div>
        <% } %>
      </div>
    </div>
  </section>

<% } else { %>
  <section class="py-24 md:py-32 bg-gradient-to-br from-red-50 to-orange-50">
    <div class="container mx-auto px-4 text-center max-w-4xl">
      <div class="bg-white p-12 rounded-2xl shadow-xl border border-red-100">
        <i class="fas fa-exclamation-triangle text-5xl text-red-500 mb-6"></i>
        <h2 class="text-3xl md:text-4xl font-bold text-red-600 mb-4">Content Unavailable</h2>
        <p class="text-xl text-gray-600 leading-relaxed">We couldn't load the page content at this time. Please refresh the page or try again later.</p>
        <button onclick="window.location.reload()" class="mt-8 px-8 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors duration-300 font-semibold">
          Try Again
        </button>
      </div>
    </div>
  </section>
<% } %>
</main>

<!-- Enhanced Footer -->
<footer class="bg-gradient-to-r from-gray-800 to-gray-900 text-white py-12 border-t-4 border-indigo-500">
  <div class="container mx-auto text-center px-4">
    <div class="mb-6">
      <h3 class="text-2xl font-bold mb-2">PMAFA</h3>
      <p class="text-gray-300">Committed to Community Excellence</p>
    </div>
    <div class="border-t border-gray-700 pt-6">
      <p class="text-gray-400">Â© 2025 PMAFA. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
/* Custom animations */
@keyframes fade-in {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slide-up {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-20px); }
}

.animate-fade-in {
  animation: fade-in 1s ease-out;
}

.animate-slide-up {
  animation: slide-up 1s ease-out 0.3s both;
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

.animation-delay-1000 {
  animation-delay: 1s;
}

.animation-delay-2000 {
  animation-delay: 2s;
}

.animation-delay-4000 {
  animation-delay: 4s;
}

/* Enhanced text shadows for hero */
.text-shadow-lg {
  text-shadow: 2px 4px 8px rgba(0,0,0,0.5), 0 0 20px rgba(0,0,0,0.3);
}

.text-shadow-md {
  text-shadow: 1px 2px 4px rgba(0,0,0,0.6);
}

/* Smooth hover transitions */
.hover\:shadow-2xl:hover {
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

/* Hero background fix - FULL HEIGHT, NO ZOOM */
.about-hero {
  background-attachment: scroll !important;
  background-size: contain !important;
  background-position: center center !important;
  background-repeat: no-repeat !important;
  background-color: #f8fafc; /* Light background color to fill empty space */
}
</style>

</body>
</html>