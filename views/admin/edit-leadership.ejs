                        <i class="fas fa-save mr-2"></i> Save Changes
                    </button>
                </form>
            <% } %>
        </div>
    </div>

<script>
    // Generic image preview function
    function previewAdminImage(event, previewElementId, backgroundElementId) {
        const reader = new FileReader();
        const file = event.target.files[0];

        reader.onload = function() {
            const outputImg = document.getElementById(previewElementId);
            if (outputImg) {
                outputImg.src = reader.result;
            }
            if (backgroundElementId) {
                const bgElement = document.getElementById(backgroundElementId);
                if (bgElement) {
                    bgElement.style.backgroundImage = `url('${reader.result}')`;
                }
            }
        };

        if (file) {
            reader.readAsDataURL(file);
        } else {
            // If no file is selected (e.g., user clears the selection),
            // revert to original or default if you have stored it.
            // For simplicity, this example doesn't revert to a stored original on clear,
            // but you could store the original path in a data attribute on the img tag.
            // For now, if cleared, it won't change from the last valid preview or loaded image.
        }
    }

    // Team Member Add/Remove Logic (from your provided EJS)
    document.addEventListener('DOMContentLoaded', () => {
        const membersContainer = document.getElementById('team-members-container');
        const addMemberBtn = document.getElementById('add-member-btn');

        const updateMemberIndices = () => {
            const memberItems = membersContainer.querySelectorAll('.team-member-edit');
            const memberCount = memberItems.length;
            memberItems.forEach((item, index) => {
                item.querySelectorAll('[name^="teamMembers["]').forEach(input => {
                    const nameAttr = input.getAttribute('name');
                    input.name = nameAttr.replace(/\[\d+\]/, `[${index}]`);
                     if(input.id){
                        const oldIdBase = input.id.substring(0, input.id.lastIndexOf('-') + 1);
                        input.id = `${oldIdBase}${index}`;
                        const label = item.querySelector(`label[for^="${oldIdBase}"]`);
                        if(label) label.setAttribute('for', input.id);
                    }
                });
                item.querySelectorAll('[name^="teamMemberImage_"]').forEach(input => {
                    const oldIdBaseImg = input.id.substring(0, input.id.lastIndexOf('_') + 1);
                    input.name = `teamMemberImage_${index}`;
                    input.id = `${oldIdBaseImg}${index}`;

                    // Update preview function call if needed, or rely on IDs for preview function
                    const imgPreviewTag = item.querySelector('img[id^="teamMemberImagePreview_"]');
                    if(imgPreviewTag) imgPreviewTag.id = `teamMemberImagePreview_${index}`;
                    
                    input.setAttribute('onchange', `previewAdminImage(event, 'teamMemberImagePreview_${index}')`);


                    const label = item.querySelector(`label[for^="${oldIdBaseImg.replace('File','')}"]`);
                     if(label) label.setAttribute('for', input.id);
                });
                const removeBtn = item.querySelector('.remove-item-btn');
                if(removeBtn) removeBtn.dataset.index = index;
            });
            const noMembersMsg = document.querySelector('#team-members-container > p.text-gray-500');
            if (noMembersMsg) noMembersMsg.style.display = memberCount === 0 ? 'block' : 'none';
        };

        if(addMemberBtn && membersContainer) {
            addMemberBtn.addEventListener('click', () => {
                const currentMemberCount = membersContainer.querySelectorAll('.team-member-edit').length;
                const newMemberItem = document.createElement('div');
                newMemberItem.className = 'team-member-edit p-4 text-center';
                newMemberItem.innerHTML = `
                    <img id="teamMemberImagePreview_${currentMemberCount}" src="https://via.placeholder.com/128x128?text=New" alt="New Member Image" class="w-32 h-32 rounded-full mx-auto mb-4 object-cover border preview-image-small">
                    <div class="wysiwyg-file-input-container max-w-xs mx-auto mb-4">
                        <label class="block text-xs font-medium text-gray-700 mb-1" for="teamMemberImageFile_${currentMemberCount}">Upload Image</label>
                        <input type="file" id="teamMemberImageFile_${currentMemberCount}" name="teamMemberImage_${currentMemberCount}" accept="image/*" class="wysiwyg-file-input" onchange="previewAdminImage(event, 'teamMemberImagePreview_${currentMemberCount}')">
                    </div>
                    <div class="space-y-3">
                        <div><label class="block text-xs font-medium text-gray-700" for="team-name-${currentMemberCount}">Name</label><input id="team-name-${currentMemberCount}" type="text" name="teamMembers[${currentMemberCount}].name" value="" placeholder="Name" class="wysiwyg-input text-xl font-semibold w-full text-center"></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-title-${currentMemberCount}">Title</label><input id="team-title-${currentMemberCount}" type="text" name="teamMembers[${currentMemberCount}].title" value="" placeholder="Title" class="wysiwyg-input text-gray-600 w-full text-center"></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-bio-${currentMemberCount}">Bio</label><textarea id="team-bio-${currentMemberCount}" name="teamMembers[${currentMemberCount}].bio" rows="3" placeholder="Short Bio..." class="wysiwyg-textarea text-gray-600 w-full text-sm"></textarea></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-email-${currentMemberCount}">Email</label><input id="team-email-${currentMemberCount}" type="email" name="teamMembers[${currentMemberCount}].email" value="" placeholder="Email" class="wysiwyg-input text-sm w-full text-center"></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-tenure-${currentMemberCount}">Tenure</label><input id="team-tenure-${currentMemberCount}" type="text" name="teamMembers[${currentMemberCount}].tenure" value="" placeholder="e.g., Since 2021" class="wysiwyg-input text-sm w-full text-center"></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-achievements-${currentMemberCount}">Achievements</label><textarea id="team-achievements-${currentMemberCount}" name="teamMembers[${currentMemberCount}].achievements" rows="3" placeholder="Key Achievements..." class="wysiwyg-textarea text-sm w-full"></textarea></div>
                        <div><label class="block text-xs font-medium text-gray-700" for="team-link-${currentMemberCount}">Link Slug</label><input id="team-link-${currentMemberCount}" type="text" name="teamMembers[${currentMemberCount}].link" value="" placeholder="/administration/person/..." class="wysiwyg-input text-sm w-full text-center"></div>
                    </div>
                    <button type="button" class="remove-item-btn" data-index="${currentMemberCount}"><i class="fas fa-times"></i></button>
                `;
                const noMembersMsg = membersContainer.querySelector('p.text-gray-500');
                if (noMembersMsg) noMembersMsg.style.display = 'none'; // Hide "no members" message
                membersContainer.appendChild(newMemberItem);
                // updateMemberIndices(); // Already called after append usually, but good to ensure
            });
        }

        if(membersContainer) {
            membersContainer.addEventListener('click', (e) => {
                const removeBtn = e.target.closest('.remove-item-btn');
                if (removeBtn) {
                    if (confirm('Are you sure you want to remove this team member?')) {
                        removeBtn.closest('.team-member-edit').remove();
                        updateMemberIndices();
                    }
                }
            });
        }
        updateMemberIndices(); // Initial setup
    });
</script>
