<%- include('partials/header') %>
<main>
<% if (typeof person !== 'undefined' && person) { %>

  <section id="person-hero" class="relative h-80 md:h-96 flex items-center justify-center overflow-hidden hero-gradient"> <%# Slightly shorter hero %>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-black mb-2 animate-fade-in"><%= person.name ?? 'Person Name' %></h1>
      <p class="text-xl md:text-2xl text-indigo-800 font-medium animate-slide-up"><%= person.title ?? 'Title' %></p> <%# Changed color %>
    </div>
  </section>

  <section class="py-16 md:py-20 bg-gray-50 -mt-16 relative z-20"> <%# Pull content up slightly %>
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-8 md:gap-12 max-w-6xl mx-auto bg-white p-6 md:p-10 rounded-xl shadow-xl custom-shadow">
        <div class="lg:w-1/3 flex-shrink-0 text-center">
           <img src="<%= person.image ?? 'https://via.placeholder.com/256x256?text=Person' %>" alt="<%= person.name %>" class="w-60 h-60 md:w-72 md:h-72 object-cover rounded-full shadow-lg custom-shadow animate-fade-in mx-auto border-4 border-white -mt-20 md:-mt-24 mb-4"> <%# Rounded image pulled up %>
             <%# Contact Info Below Image %>
             <div class="mt-4 space-y-2 text-sm text-gray-600">
                 <% if (person.email) { %>
                 <p><i class="fas fa-envelope mr-2 text-indigo-500"></i><a href="mailto:<%= person.email %>" class="text-indigo-600 hover:underline"><%= person.email %></a></p>
                 <% } %>
                  <%# Add phone if available in model %>
                  <%# if (person.phone) { %>
                 <%# } %>
             </div>
        </div>
        <div class="lg:w-2/3 flex flex-col justify-center animate-slide-up">
           <h2 class="text-3xl font-bold text-gray-800 mb-2"><%= person.name %></h2>
           <p class="text-xl text-indigo-700 font-medium mb-5"><%= person.title %></p>
           <%# Use description mapped from bio %>
           <p class="text-gray-700 leading-relaxed mb-6 whitespace-pre-line"><%= person.description ?? 'Bio not available.' %></p>

           <%# Added simple sections for Tenure/Achievements %>
           <% if (person.tenure && person.tenure !== 'N/A') { %>
             <div class="mb-4 pt-3 border-t border-gray-200">
                <h4 class="font-semibold text-gray-700 mb-1">Tenure</h4>
                <p class="text-gray-600"><%= person.tenure %></p>
             </div>
           <% } %>
            <% if (person.achievements && person.achievements !== 'Key achievements not listed.') { %>
             <div class="mb-6 pt-3 border-t border-gray-200">
                <h4 class="font-semibold text-gray-700 mb-1">Key Achievements</h4>
                <p class="text-gray-600 whitespace-pre-line"><%= person.achievements %></p>
             </div>
           <% } %>

           <a href="<%= person.backLink ?? '/about/leadership' %>" class="mt-4 inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 py-2 px-5 rounded-lg text-base font-medium transition shadow-sm">
             <i class="fas fa-arrow-left mr-2"></i> Back
           </a>
        </div>
      </div>
    </div>
  </section>

<% } else { %>
    <section class="py-16 md:py-24 bg-white">
        <div class="container mx-auto px-4 text-center">
             <h2 class="text-2xl font-semibold text-red-600">Person Not Found</h2>
             <p class="text-gray-600 mt-4">The details for this person could not be loaded.</p>
             <a href="/about/leadership" class="mt-6 inline-block bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700">Back to Leadership</a>
        </div>
    </section>
<% } %>
</main>

